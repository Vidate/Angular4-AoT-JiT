{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitAny": false,
        "typeRoots": [
            "../node_modules/@types/"
        ],
        "allowJs": false
    },
    "files": [
        "src/app/app.module.ts",
        "src/main-aot.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}