{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "allowJs": false,
        "lib": ["es2015", "dom"],
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "src/**/*-aot.*"
    ]
}